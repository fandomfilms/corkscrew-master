{% set section = 'templates' %}
{% extends "_corkscrew-layout.twig" %}

{% block content %}

  {% set project =
    {
      htmlViewer: false
    }
  %}

  {% embed "_corkscrew-section.twig" %}

    {% set label = 'Templates' %}
    {% set description = 'A listing of the primary page templates utilized in this project.' %}

    {% block block_content %}

      {% for template in templates %}

        <ul class="cs-template-list">
          <li class="cs-template-list__item">
            <a href="{{ template.url }}">{{ template.name }}</a>
          </li>
        </ul>

      {% endfor %}

    {% endblock %}

  {% endembed %}

{% endblock content %}
